pipeline {
    agent {
        docker {
            image 'maven:3-alpine'
            args '-v /root/.m2:/root/.m2'
        }
    }
    stages {
        stage('Build') {
            steps {
                sh 'mvn -B -DskipTests clean package'
            }
        }
        stage('build docker image') {
            steps {
                sh './jenkins/scripts/build.sh'
            }
        }
        stage('Ansible remote deploy') {
            steps {
                sh 'ansible -i $ANSIBLE_HOST_DIR $ANSIBLE_HOST_NAME  -m shell -a "cd $CODE_DIR/$GIT_NAME;docker"'
            }
        }
    }
}
